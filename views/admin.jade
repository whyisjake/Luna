extends layout

block content

    .container-fluid
      .row

        include sidebar.jade

        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main

          h1.page-header Luna Admin Dashboard

          form(class="form-horizontal" id= site._id)

            each val, key in site
              .form-group
                label(for="inputEmail3" class= (key == '_id') ? 'hidden col-sm-2 control-label' : 'col-sm-2 control-label' )= key
                .col-sm-10
                  input(type= (key == '_id') ? 'hidden' : 'text' class="form-control" id="name" placeholder= val value= val )

            .form-group
              .col-sm-offset-2.col-sm-10
                button(type="submit" class="btn btn-default submit") Update